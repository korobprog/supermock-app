FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY landing/package*.json ./

# Install dependencies without network calls
RUN npm ci --only=production --offline || npm install --only=production

# Copy source code
COPY landing/ ./

# Build the application
RUN npm run build

# Use built-in Node.js server
EXPOSE 3000

CMD ["npx", "next", "start"]
