{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SuperMock",
  "version": "0.1.0",
  "identifier": "ru.supermock.app",
  "build": {
    "beforeDevCommand": "pnpm --filter @supermock/app dev",
    "beforeBuildCommand": "pnpm --filter @supermock/app build",
    "devPath": "http://localhost:3000",
    "distDir": "../.next"
  },
  "tauri": {
    "windows": [
      {
        "title": "SuperMock",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": true
    }
  }
}
