{
  "name": "supermock-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.15.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:app": "pnpm --filter ./app dev --port 3000",
    "dev:landing": "pnpm --filter ./landing dev --port 3001",
    "dev:server": "pnpm --filter ./server dev",
    "start:dev": "./scripts/start-dev.sh",
    "start:dev:server": "./scripts/start-dev.sh server",
    "start:dev:app": "./scripts/start-dev.sh app",
    "start:dev:landing": "./scripts/start-dev.sh landing",
    "stop:dev": "./scripts/start-dev.sh stop",
    "status:dev": "./scripts/start-dev.sh status",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r --filter ./server test:unit",
    "test:integration": "pnpm -r --filter ./server test:integration",
    "test:e2e": "pnpm -r --filter ./app test:e2e",
    "db:migrate": "pnpm --filter ./server db:migrate",
    "db:seed": "pnpm --filter ./server db:seed",
    "db:reset": "pnpm --filter ./server db:reset",
    "kill:ports": "./scripts/kill-ports.sh",
    "kill:app": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "kill:landing": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true",
    "kill:server": "lsof -ti:4000 | xargs kill -9 2>/dev/null || true"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0"
  }
}
