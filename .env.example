# -------------------------------------------------
# SuperMock Monorepo Environment Configuration
# -------------------------------------------------
# Copy this file to `.env` at the repository root and
# fill in the values that match your environment.
# Each workspace (app, landing, server) can also have
# its own .env file that overrides these defaults.
# -------------------------------------------------

# ===== Core Platform =====
NODE_ENV=development
PLATFORM_NAME=SuperMock
WEB_APP_URL=https://supermock.ru
DESKTOP_APP_URL=https://app.supermock.ru
API_BASE_URL=https://api.supermock.ru
CDN_BASE_URL=

# ===== Database =====
DATABASE_URL=postgresql://supermock:supermock@localhost:5432/supermock
DIRECT_DATABASE_URL=
SHADOW_DATABASE_URL=
SQLITE_URL=file:./dev.db

# ===== Redis / Caching =====
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# ===== Authentication =====
# Required outside of development â€“ set a strong random string.
JWT_SECRET=
JWT_REFRESH_SECRET=change-me-refresh
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d
PASSWORD_RESET_TOKEN_TTL=1h

# ===== OAuth Providers =====
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_TELEGRAM_BOT_TOKEN=
OAUTH_TELEGRAM_WEBHOOK_SECRET=

# ===== AI Providers =====
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
DEFAULT_AI_PROVIDER=openrouter

# ===== Real-time Communication =====
STUN_SERVER_URL=stun:stun.l.google.com:19302
TURN_SERVER_URL=turns:turn.supermock.ru:3478
TURN_SERVER_USERNAME=
TURN_SERVER_PASSWORD=
WEBRTC_ICE_TIMEOUT=10000
DAILY_CO_API_KEY=
DAILY_CO_DOMAIN=

# ===== Notifications =====
TELEGRAM_BOT_TOKEN=
TELEGRAM_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
ONESIGNAL_APP_ID=
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# ===== Payments =====
PAYEER_MERCHANT_ID=
PAYEER_API_KEY=
PAYEER_API_ACCOUNT=
PAYEER_IP_FILTER=

# ===== Monitoring & Logging =====
SENTRY_DSN=
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
LOG_LEVEL=info

# ===== Server Configuration =====
SERVER_PORT=4000
SERVER_HOST=0.0.0.0
CORS_ORIGIN=https://supermock.ru,https://app.supermock.ru
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute
SESSION_SECRET=change-me

# ===== Mailer =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
MAIL_FROM="SuperMock <no-reply@supermock.ru>"

# ===== Analytics =====
POSTHOG_API_KEY=
POSTHOG_API_HOST=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# ===== Feature Flags =====
FEATURE_AI_ANALYTICS=true
FEATURE_REALTIME_MATCHING=true
FEATURE_SUPPORT_WIDGET=true
FEATURE_KNOWLEDGE_TRAINER=true

# ===== Next.js Public Runtime (Landing + Desktop) =====
NEXT_PUBLIC_API_URL=https://api.supermock.ru
NEXT_PUBLIC_WS_URL=wss://api.supermock.ru/ws
NEXT_PUBLIC_TELEGRAM_BOT_NAME=SuperMockBot
NEXT_PUBLIC_AVAILABLE_LANGUAGES=en,ru,es,fr,de,zh
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC
NEXT_PUBLIC_APP_VERSION=0.1.0

# ===== Tauri / Desktop specifics =====
TAURI_BUNDLE_IDENTIFIER=ru.supermock.app
TAURI_WINDOWS_APP_ID=SuperMock
TAURI_AUTO_UPDATER_URL=

# ===== Docker =====
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest
